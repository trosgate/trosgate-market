upstream default_server {
    server unix:/webapps/trosgate/trosgate_env/run/gunicorn.sock fail_timeout=0;
}

server {
    listen 80 default_server;
    server_name _;
    return 301 https://$host$request_uri;
}

{{ default_server_block }}

# Merchant SSL server blocks
map $http_host $upstream {{
    # Match each merchant's domain
    default "error"; # Default upstream server for unknown domains

    # Match the known domains in your Django Sites Framework
    include /etc/nginx/domains.map;
}}

# Server blocks for each merchant
{{ server_blocks }}

server {
    # Default SSL server block

    access_log /webapps/trosgate/trosgate_env/logs/nginx-access.log;
    error_log /webapps/trosgate/trosgate_env/logs/nginx-error.log;

        location /static/ {
        autoindex on;
        alias /webapps/trosgate/trosgate_env/trosgate-marketplace/staticfiles/;
    }

    location /media/ {
        autoindex on;
        alias /webapps/trosgate/trosgate_env/trosgate-marketplace/media/;
    }

}
