upstream trosgate_app_server {
    server unix:/webapps/trosgate/trosgate_env/run/gunicorn.sock fail_timeout=0;
}


server {
    listen 80;
    server_name gigred.website;
    return 301 https://gigred.website$request_uri;
}

server {
    listen 443 ssl;
    server_name gigred.website;

    client_max_body_size 4G;

    access_log /webapps/trosgate/trosgate_env/logs/nginx-access.log;
    error_log /webapps/trosgate/trosgate_env/logs/nginx-error.log;

    ssl_certificate /etc/letsencrypt/live/gigred.website/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/gigred.website/privkey.pem;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';

    root /var/www;
    server_name gigred.website www.gigred.website;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /static/ {
        autoindex on;
        alias /webapps/trosgate/trosgate_env/trosgate-marketplace-script/staticfiles/;
    }

    location /media/ {
        autoindex on;
        alias /webapps/trosgate/trosgate_env/trosgate-marketplace-script/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_set_header Host $http_host;

        proxy_redirect off;

        if (!-f $request_filename) {
            proxy_pass http://trosgate_app_server;
        }
    }
}
